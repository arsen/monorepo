{
  "name": "backend",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "check-lockfiles": "bash scripts/check-lockfiles.sh",
    "prepare:deploy": "bash scripts/check-lockfiles.sh && bash scripts/prepare-deploy.sh",
    "postdeploy": "bash scripts/restore-symlinks.sh",
    "sync-lockfile": "bash scripts/sync-lockfile.sh && pnpm i",
    "serve": "npm run build && firebase emulators:start --only functions",
    "dev": "npm run build && concurrently \"npm run build:watch\" \"firebase emulators:start --only functions\"",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run prepare:deploy && firebase deploy --only functions && npm run postdeploy",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@everdesk/types": "workspace:*",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1"
  },
  "devDependencies": {
    "@everdesk/typescript-config": "workspace:*",
    "@types/serve-static": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.7.3"
  },
  "private": true
}