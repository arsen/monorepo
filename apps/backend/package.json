{
  "name": "backend",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prepare:deploy": "bash scripts/prepare-deploy.sh",
    "cleanup": "bash scripts/restore-symlinks.sh",
    "serve": "npm run build && firebase emulators:start --only functions",
    "dev": "npm run build && concurrently \"npm run build:watch\" \"firebase emulators:start --only functions\"",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run prepare:deploy && firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@monorepo/types": "workspace:*",
    "firebase-admin": "13.6.0",
    "firebase-functions": "7.0.0"
  },
  "devDependencies": {
    "@types/serve-static": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.32.0",
    "firebase-functions-test": "^3.4.1",
    "typescript": "^5.9.3"
  },
  "private": true
}