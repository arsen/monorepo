{
  "extends": "@monorepo/typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "rootDir": "src"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
